@model RBAC.ViewModels.UserRoleViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutForm.cshtml";
}

<form class="bootstrap-frm" action="@Url.Action("Update")">
    <h1>用户模块管理 - 编辑</h1>
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="RoleId" value="@Model.RoleId" />
    <label>
        <span>用户名称</span>
        <input type="text" name="UserName" value="@Model.UserName" readonly="readonly" />
    </label>
    <label>
        <span>角色名称</span>
        @Html.DropDownList("UpdateRoleId", (IEnumerable<SelectListItem>)ViewBag.RoleOption)
    </label>
    <label>
        <span>&nbsp;</span>
        <input type="button" class="button" value="提交" />
    </label>
</form>

