
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>RBAC Demo - 登陆</title>
    <link href="~/Content/login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
</head>
<body>
    <div id="login">
        <span class="form-title">登陆</span>
        <form action="#" method="post">
            <div class="form-item">
                <label>账号:</label>
                <input type="text" name="username" />
            </div>

            <div class="form-item">
                <label>密码:</label>
                <input type="password" name="userpass" />
            </div>
            <input class="btn" type="button" value="登陆" />
        </form>
        @Html.ActionLink("注册", "index", "reg")
    </div>
    <script>
        $(function () {
            $(".btn").click(function () {
                if ($("input[name='username']").val()==""||$("input[name='userpass']").val()=="") {
                    alert("用户名密码不能为空")
                    return
                }
                $.post('@Url.Action("login")', $("form").serialize(), function (data) {
                    if (data.code===200) {
                        window.location='@Url.Action("index","Home")'
                    } else if (data.code==400) {
                        alert("数据错误")
                    } else {
                        alert("用户名或密码错误")
                    }
                })
            })
        })
    </script>
</body>
</html>
